  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Ingrese un token despues de registrarse, pero procure que el usuario sea de role: Admin, por lo que deberá editarlo ese campo en la base de datos"
      }
    },
    "schemas": {
      "Users": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "users": {
                "properties": {
                  "_id": {
                    "type": "string",
                    "description": "Id del usuario",
                    "example": "123456789"
                  },
                  "username": {
                    "type": "string",
                    "description": "Nombre de usuario",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "description": "Email del usuario",
                    "example": "JohnDoe@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "Contraseña del usuario",
                    "example": "********"
                  },
                  "role": {
                    "type": "string",
                    "description": "Role de usuario",
                    "example": "User"
                  },
                  "createdAt": {
                    "type": "string",
                    "description": "Fecha de creacion del usuario",
                    "example": "2025-11-10"
                  },
                  "updatedAt": {
                    "type": "string",
                    "description": "Fecha de la ultima actualizacion del usuario",
                    "example": "2025-11-10"
                  }
                }
              }
            }
          }
        ]
      },
      "User": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "users": {
                "type": "array",
                "$ref": "#/components/schemas/NewUser"
              }
            }
          },
          {
            "type": "object",
            "required": ["id"]
          }
        ]
      },
      "NewUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Nombre de usuario",
            "nullable": false,
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "description": "Email del usuario",
            "nullable": false,
            "example": "JohnDoe@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "Contraseña del usuario",
            "nullable": false,
            "example": "********"
          }
        }
      },
      "Blog": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Titulo del blog",
            "nullable": false,
            "example": "Titulo de Blog"
          },
          "subTitle": {
            "type": "string",
            "description": "Subtitulo del blog",
            "nullable": false,
            "example": "Subtitulo del Blog"
          },
          "description": {
            "type": "string",
            "description": "Descripcion del blog",
            "nullable": false,
            "example": "Breve descripcion del Blog manual o con IA"
          },
          "category": {
            "type": "string",
            "description": "Categorias",
            "nullable": false,
            "example": "Tecnologia | Estilo de vida"
          },
          "image": {
            "type": "string",
            "format": "binary",
            "description": "Ruta de la imagen alojada en la plataforma ImageKit",
            "nullable": false,
            "example": "http://imagekit.io/1234567890"
          },
          "isPublished": {
            "type": "boolean",
            "description": "Publicacion del blog",
            "nullable": false,
            "example": "True | false"
          }
        }
      },
      "Comentario": {
        "type": "object",
        "properties": {
          "blog": {
            "type": "object",
            "description": "Ingresa el id del blog al cual se le agrega el comentario",
            "nullable": false,
            "example": "123456789"
          },
          "name": {
            "type": "string",
            "description": "Ingresa el nombre del usuario",
            "nullable": false,
            "example": "123456789"
          },
          "content": {
            "type": "string",
            "description": "Ingresa el contenido del comentario",
            "nullable": false
          }
        }
      },
      "Comentarios": {
        "type": "object",
        "properties": {
          "blog": {
            "type": "object",
            "description": "Ingresa el id del blog al cual se le agrega el comentario",
            "nullable": false,
            "example": "123456789"
          },
          "name": {
            "type": "string",
            "description": "Ingresa el nombre del usuario",
            "nullable": false,
            "example": "123456789"
          },
          "content": {
            "type": "string",
            "description": "Ingresa el contenido del comentario",
            "nullable": false
          },
          "isApproved": {
            "type": "boolean",
            "description": "Muestra si se publica o se desactiva ese comentario",
            "nullable": false,
            "example": "True | false"
          }
        }
      },
      "NewsAll": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Selecciona el modelo del formulario para la noticia",
            "nullable": false,
            "example": "hero-image | bullet-list | quote-block"
          },
          "category": {
            "type": "string",
            "description": "Ingresa la categoria a la cual representa la noticia",
            "nullable": false,
            "example": "ACTUALIDAD"
          },
          "title": {
            "type": "string",
            "description": "Titulo de la noticia",
            "nullable": false,
            "example": "Descubrimiento Asombroso en Marte..."
          },
          "isPublished": {
            "type": "boolean",
            "example": "True | false"
          },
          "contentQuote": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContentQuote"
              }
            }
          }
        }
      },
      "ContentQuote": {
        "type": "object",
        "properties": {
          "quoteText": {
            "type": "string",
            "description": "Descripcion de la noticia",
            "nullable": false,
            "example": "La sostenibilidad no es una opción..."
          },
          "context": {
            "type": "string",
            "description": "Nombre o entidad quien la escribe",
            "nullable": false,
            "example": "CEO de Green Solutions Corp."
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["code", "message", "success"],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
