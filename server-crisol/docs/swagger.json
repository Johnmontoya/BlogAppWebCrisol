    "/api/v1/user/login": {
      "post": {
        "summary": "Login usuario",
        "tags": ["usuarios"],
        "description": "Ingresa las credenciales para ingresar al blog",
        "operationId": "loginCUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "JohnDoe@gmail.com"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Datos retornados al ser logueado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "valid": {
                      "type": "string",
                      "example": "success"
                    },
                    "userId": {
                      "type": "string",
                      "example": "1234567889"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ..."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Correo o contraseña incorrecta"
          },
          "500": {
            "description": "Ocurrió un error en el servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
