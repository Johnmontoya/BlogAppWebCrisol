{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Crisol de ideas",
    "description": "Blog App con IA integrada",
    "contact": {
      "name": "Blog App Crisol de ideas",
      "email": "johnmontoya777@hotmail.com",
      "url": "https://github.com/Johnmontoya"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development Server"
    }
  ],
  "paths": {
    "/api/v1/user/users": {
      "get": {
        "summary": "Obtiene todos los usuarios",
        "tags": ["usuarios"],
        "description": "Retorna todos los usuarios de la base de datos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista todos los usuarios",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/register": {
      "post": {
        "summary": "Registra el usuario",
        "tags": ["usuarios"],
        "description": "Ingresa las credenciales para registrarse a la plataforma",
        "operationId": "registerCUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario registrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al crear el usuario.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/user/{id}": {
      "get": {
        "summary": "Obtiene un usuario por ID",
        "tags": ["usuarios"],
        "description": "Retorna un usuario por su ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del usuario a buscar",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Recupera un usuario",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Users"
                }
              }
            }
          },
          "404": {
            "description": "No hay usuario registrado en la base de datos."
          },
          "500": {
            "description": "Error al obtener el usuario",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Elimina un usuario por su ID",
        "tags": ["usuarios"],
        "description": "Borra de la base de la base de datos un usuario por su ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del usuario a buscar",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Elimina el usuario",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "message": {
                    "type": "string",
                    "example": "Cuenta eliminada"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error al borrar al usuario",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/login": {
      "post": {
        "summary": "Login usuario",
        "tags": ["usuarios"],
        "description": "Ingresa las credenciales para ingresar al blog",
        "operationId": "loginCUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "JohnDoe@gmail.com"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Datos retornados al ser logueado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "valid": {
                      "type": "string",
                      "example": "success"
                    },
                    "userId": {
                      "type": "string",
                      "example": "1234567889"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ..."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Correo o contraseña incorrecta"
          },
          "500": {
            "description": "Ocurrió un error en el servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/forgot": {
      "post": {
        "summary": "Recuperacion de cuenta",
        "tags": ["usuarios"],
        "description": "Se envia el email para recibir el mensaje con los datos del usuario y el token",
        "operationId": "ResetUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "JohnDoe@gmail.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "valid": {
                      "type": "string",
                      "example": "success"
                    },
                    "message": {
                      "type": "string",
                      "example": "Email enviado"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error el enviar el correo",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/user/reset": {
      "put": {
        "summary": "Cambio de contraseña",
        "tags": ["usuarios"],
        "description": "Ingresa la contraseña nueva",
        "operationId": "ResetUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string"
                  },
                  "token": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "example": "*********"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Contraseña cambiada"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error al cambiar la contraseña",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/add": {
      "post": {
        "summary": "Guardar blog",
        "tags": ["blogs"],
        "description": "Ingresa los datos para guardar el nuevo blog",
        "operationId": "registerCBlog",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "$ref": "#/components/schemas/Blog"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Blog agregado en la base de datos",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "message": {
                    "type": "string",
                    "example": "Blog agregado!"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al crear el blog.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/all": {
      "get": {
        "summary": "Obtiene todos los blogs",
        "tags": ["blogs"],
        "description": "Retorna todos los blogs de la base de datos",
        "responses": {
          "200": {
            "description": "Lista todos los usuarios",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "results": {
                    "type": "integer",
                    "example": "1"
                  },
                  "blogs": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Blog"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No hay datos",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "message": {
                    "type": "string",
                    "example": "No hay blogs registrados en la base de datos."
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error en el servidor",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "error"
                  },
                  "message": {
                    "type": "string",
                    "example": "Ocurrió un error en el servidor al obtener los blogs."
                  },
                  "details": {
                    "type": "string",
                    "items": {
                      "$ref": "#/components/schemas/Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/delete": {
      "delete": {
        "summary": "Borrar el blog por ID",
        "tags": ["blogs"],
        "description": "Borra un blog de la base de datos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "blogId": {
                    "type": "string",
                    "example": "ID del blog"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Eliminacion de blog",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "message": {
                    "type": "string",
                    "example": "Blog eliminado"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No hay registros",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "fail"
                  },
                  "message": {
                    "type": "string",
                    "example": "No hay blog registrado en la base de datos."
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al borrar el blog.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/toggle-publish": {
      "put": {
        "summary": "cambia el estado de un blog por ID",
        "tags": ["blogs"],
        "description": "Cambia el estado de un blog de la base de datos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "ID del blog"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Actualizar el blog",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "message": {
                    "type": "string",
                    "example": "Blog actualizado"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al actualizar el blog.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/all-admin": {
      "get": {
        "summary": "Obitne todos los blogs",
        "tags": ["blogs"],
        "description": "Muestra todos los blogs registrados en la base de datos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Todos los blogs",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "blogs": {
                    "items": {
                      "$ref": "#/components/schemas/Blog"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No hay blogs registrados",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "fail"
                  },
                  "message": {
                    "type": "string",
                    "example": "No hay blog registrados en la base de datos."
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al obtener los blogs.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/dashboard": {
      "get": {
        "summary": "Obtiene los datos del blog",
        "tags": ["blogs"],
        "description": "Muestra los datos de los blogs registrados en la base de datps",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Todos los datos del blog",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "blogs": {
                    "items": {
                      "$ref": "#/components/schemas/Blog"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al los datos de los blogs.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/generate": {
      "post": {
        "summary": "cambia el estado de un blog por ID",
        "tags": ["blogs"],
        "description": "Cambia el estado de un blog de la base de datos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "prompt": {
                    "type": "string",
                    "example": "Texto breve para generar con la IA"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Generacion de breve descripcion con IA",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "content": {
                    "type": "string",
                    "example": "Texto generado con IA"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al borrar el blog.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/blog/{blogId}": {
      "get": {
        "summary": "Obtiene un blog por ID",
        "tags": ["blogs"],
        "description": "Obtiene un blog por un ID enviado por parametro",
        "parameters": [
          {
            "name": "blogId",
            "in": "path",
            "description": "ID del blog a buscar",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Todos los datos del blog",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "success"
                  },
                  "blogs": {
                    "items": {
                      "$ref": "#/components/schemas/Blog"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No hay blogs registrados",
            "content": {
              "application/json": {
                "properties": {
                  "valid": {
                    "type": "string",
                    "example": "fail"
                  },
                  "message": {
                    "type": "string",
                    "example": "No hay blog registrados en la base de datos."
                  }
                }
              }
            }
          },
          "500": {
            "description": "Ocurrió un error en el servidor al obtener el blog.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Ingrese un token despues de registrarse, pero procure que el usuario sea de role: Admin, por lo que deberá editarlo ese campo en la base de datos"
      }
    },
    "schemas": {
      "Users": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "users": {
                "properties": {
                  "_id": {
                    "type": "string",
                    "description": "Id del usuario",
                    "example": "123456789"
                  },
                  "username": {
                    "type": "string",
                    "description": "Nombre de usuario",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "description": "Email del usuario",
                    "example": "JohnDoe@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "description": "Contraseña del usuario",
                    "example": "********"
                  },
                  "role": {
                    "type": "string",
                    "description": "Role de usuario",
                    "example": "User"
                  },
                  "createdAt": {
                    "type": "string",
                    "description": "Fecha de creacion del usuario",
                    "example": "2025-11-10"
                  },
                  "updatedAt": {
                    "type": "string",
                    "description": "Fecha de la ultima actualizacion del usuario",
                    "example": "2025-11-10"
                  }
                }
              }
            }
          }
        ]
      },
      "User": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "users": {
                "type": "array",
                "$ref": "#/components/schemas/NewUser"
              }
            }
          },
          {
            "type": "object",
            "required": ["id"]
          }
        ]
      },
      "NewUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Nombre de usuario",
            "nullable": false,
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "description": "Email del usuario",
            "nullable": false,
            "example": "JohnDoe@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "Contraseña del usuario",
            "nullable": false,
            "example": "********"
          }
        }
      },
      "Blog": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Titulo del blog",
            "nullable": false,
            "example": "Titulo de Blog"
          },
          "subTitle": {
            "type": "string",
            "description": "Subtitulo del blog",
            "nullable": false,
            "example": "Subtitulo del Blog"
          },
          "description": {
            "type": "string",
            "description": "Descripcion del blog",
            "nullable": false,
            "example": "Breve descripcion del Blog manual o con IA"
          },
          "category": {
            "type": "string",
            "description": "Categorias",
            "nullable": false,
            "example": "Tecnologia | Estilo de vida"
          },
          "image": {
            "type": "string",
            "format": "binary",
            "description": "Ruta de la imagen alojada en la plataforma ImageKit",
            "nullable": false,
            "example": "http://imagekit.io/1234567890"
          },
          "isPublished": {
            "type": "boolean",
            "description": "Publicacion del blog",
            "nullable": false,
            "example": "True | false"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["code", "message", "success"],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
